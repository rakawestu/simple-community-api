{
    "env": {
      "es6": true,
      "mocha": true,
      "browser": true,
      "node": true,
      "amd": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "babel"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "camelcase": 0,
      "arrow-parens": ["error", "always"],
      "babel/arrow-parens": 2,
      "no-use-before-define": ["error", { "variables": false }],
      "max-len": [
        1,
        180,
        4
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "arrow-body-style": [
        "off"
      ],
      "no-underscore-dangle": [
        "off"
      ],
      "no-unused-expressions": [
        "error",
        {
          "allowTernary": true
        }
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "never",
          "objects": "never",
          "imports": "never",
          "exports": "never",
          "functions": "ignore"
        }
      ],
      "import/prefer-default-export": "off"
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "config/webpack.dev.config.js"
        }
      }
    }
  }